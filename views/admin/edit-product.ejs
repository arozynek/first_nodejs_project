<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css" />
<link rel="stylesheet" href="/css/product.css" />
</head>
<body>
  <%- include('../includes/header.ejs') %>
  <main>
    <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-prod<% } %>" method="POST">
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" <% if(editing) { %> value = <%=editingProduct.title%> <% } %>>
      </div>
      <div class="form-control">
        <label for="imageUrl">Image URL</label>
        <input type="text" name="imageUrl" id="imageUrl" <% if(editing) { %> value = <%=editingProduct.imageUrl%> <% } %>>
      </div>
      <div class="form-control">
        <label for="price">Price</label>
        <input type="number" name="price" id="price" step="0.01" <% if(editing) { %> value = <%=editingProduct.price%> <% } %>>
      </div>
      <div class="form-control">
        <label for="description">Product description</label>
        <textarea name="description" id="description" rows="5"><% if(editing) { %><%=editingProduct.description%><% } %></textarea>
      </div>
      <% if(editing) { %>
      <input type="hidden" value="<%= editingProduct.id %>" name="productId" >
        <% } %>
      <button class="btn" type="submit"><% if(editing) { %> Update product <% } else { %> Add product <% } %></button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>
